<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_recording">

    <fragment
        android:id="@+id/navigation_recording"
        android:name="com.example.newcursovaya.ui.recording.RecordingFragment"
        android:label="@string/title_recording"
        tools:layout="@layout/fragment_recording" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.newcursovaya.ui.history.HistoryFragment"
        android:label="@string/title_history"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_broadcast"
        android:name="com.example.newcursovaya.ui.broadcast.BroadcastFragment"
        android:label="@string/title_broadcast"
        tools:layout="@layout/fragment_broadcast" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.newcursovaya.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>